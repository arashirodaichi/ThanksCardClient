<UserControl x:Class="ThanksCardClient.Views.ThanksCardCreate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <StackPanel Margin="-110,0,-170,-30" >
            <StackPanel.Background>
                <ImageBrush ImageSource="image1.png" />
            </StackPanel.Background>
            <TextBlock Text="to:"/>
            <TextBox Text="{Binding ThanksCard.Title}" Background="Transparent"/>

            <TextBlock Text="from:"/>
            <TextBox Text="{Binding ThanksCard.Title}" Background="Transparent"/>

            <TextBlock Text="date:"/>
            <TextBox Text="{Binding ThanksCard.Title}" Background="Transparent"/>

            <TextBlock Text="from:"/>
            <TextBox Text="{Binding ThanksCard.Title}" Background="Transparent" Height="18" Margin="0,0,0.2,0"/>

            <TextBlock Text="title:"/>
            <TextBox Background="Transparent"/>





            <TextBox Text="{Binding ThanksCard.Body}" Background="Transparent" Height="79"/>


        </StackPanel>
        <Button Content="既読" HorizontalAlignment="Left" Margin="-166,-43,0,0" VerticalAlignment="Top" Width="45" RenderTransformOrigin="-8.193,0.333" Height="17"/>
        <Button Content="いいね" HorizontalAlignment="Left" Margin="-105,-43,0,0" VerticalAlignment="Top" Width="38" RenderTransformOrigin="-0.555,-0.167" Height="17"/>
        <Button Content="戻る" HorizontalAlignment="Left" Margin="228,-43,-231,0" VerticalAlignment="Top" Width="43" Height="17"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="-110,67,-170,0" VerticalAlignment="Top" Width="320"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="-110,101,-170,0" VerticalAlignment="Top" Width="320"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="-110,134,-170,0" VerticalAlignment="Top" Width="320"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="-110,32,-170,0" VerticalAlignment="Top" Width="320"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="18" Margin="-110,0,-170,0" VerticalAlignment="Top" Width="320"/>
        
    </Grid>


</UserControl>

        <Button Content="部署管理" Command="{Binding DepartmentDepartmentsCommand}" HorizontalAlignment="Left" Margin="70,119,0,0" VerticalAlignment="Top" Width="300" Height="230" FontSize="64" FontWeight="Bold" Background="#FF23E8EB"/>
